  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "allure-commandline": "^2.30.0",
    "allure-cucumberjs": "^2.0.0",
    "@cucumber/cucumber": "^10.2.0",
    "@playwright/test": "^1.46.0",
    "@types/node": "^20.14.12",
    "dotenv": "^16.4.5",
    "playwright": "^1.46.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
